{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/schemas/auth.json",
  "title": "Auth DTOs",
  "definitions": {
    "LoginRequest": {
      "type": "object",
      "properties": {
        "username": { "type": "string" },
        "password": { "type": "string" }
      },
      "required": ["username", "password"],
      "additionalProperties": false,
      "examples": [ { "username": "admin", "password": "hunter2" } ]
    },

    "TokenResponse": {
      "type": "object",
      "properties": {
        "access_token": { "type": "string" },
        "refresh_token": { "type": "string" },
        "token_type": { "type": "string", "default": "Bearer" },
        "expires_in": { "type": "integer" }
      },
      "required": ["access_token", "token_type", "expires_in"],
      "additionalProperties": false,
      "examples": [ { "access_token": "ey..", "refresh_token": "rt..", "token_type": "Bearer", "expires_in": 3600 } ]
    },

    "AdminProfile": {
      "type": "object",
      "properties": {
        "id_admin": { "type": "string", "format": "uuid" },
        "username": { "type": "string" },
        "nama": { "type": "string" },
        "role": { "type": "string", "enum": ["admin_daerah", "admin_pusat"] }
      },
      "required": ["id_admin", "username", "role"],
      "additionalProperties": false
    }
  }
}
