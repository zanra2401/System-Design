{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/schemas/outbox_record.json",
  "title": "Outbox Record DTO",
  "definitions": {
    "OutboxRecord": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "event_type": { "type": "string" },
        "aggregate_id": { "type": "string" },
        "payload": { "type": "object" },
        "status": { "type": "string", "enum": ["pending", "processing", "sent", "failed"] },
        "attempts": { "type": "integer", "minimum": 0 },
        "last_error": { "type": ["string", "null"] },
        "next_retry_at": { "type": ["string", "null"], "format": "date-time" },
        "created_at": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "event_type", "aggregate_id", "payload", "status", "created_at"],
      "additionalProperties": false,
      "examples": [ { "id": "o1o2o3-0000-1111", "event_type": "PutusanCreated", "aggregate_id": "3fa85f64-5717-4562-b3fc-2c963f66afa6", "payload": { "nomor_putusan": "45/Pdt.G/2024/PN.BO" }, "status": "pending", "attempts": 0, "created_at": "2024-05-12T08:31:01Z" } ]
    }
  }
}
