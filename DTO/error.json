{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/schemas/error.json",
  "title": "Error DTO",
  "definitions": {
    "ErrorResponse": {
      "type": "object",
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "details": { "type": ["string", "null"] }
      },
      "required": ["code", "message"],
      "additionalProperties": false,
      "examples": [ { "code": "VALIDATION_ERROR", "message": "Field nomor_putusan required", "details": "nomor_putusan is missing" } ]
    }
  }
}
